root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,cmd,ps1,psm1}]
end_of_line = crlf

[*.json]
indent_size = 4
insert_final_newline = false

[Makefile]
indent_style = tab

[*.py]
indent_size = 4
